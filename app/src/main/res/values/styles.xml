<resources>

    <style name="Base.Theme.WeatherForecast" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/hit_pink</item>
        <item name="colorOnPrimary">@color/t_white</item>
        <item name="colorPrimaryDark">@color/antique_brass</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorAccent">@color/peach</item>
        <item name="colorSurface">@color/gray_1</item>
        <item name="colorSecondary">@color/gray_2</item>
        <item name="android:colorBackground">@color/hit_pink</item>
        <item name="oddListItemColor">@color/cinderella</item>
        <item name="evenListItemColor">@color/apricot_peach</item>
        <item name="todayListItemColor">@color/hit_pink</item>
        <item name="gradientColor">@color/hit_pink</item>
        <item name="textColor">@color/fuscous_gray</item>
    </style>

    <style name="Theme.WeatherForecast" parent="Base.Theme.WeatherForecast" />

    <style name="Theme.WeatherForecast.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextAppearance.WeatherForecast.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/fuscous_gray</item>
    </style>

    <style name="TextAppearance.WeatherForecast.ToolbarTitle" parent="TextAppearance.WeatherForecast.Title">
        <item name="android:fontFamily">@font/sunny_weather</item>
        <item name="fontFamily">@font/sunny_weather</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TextAppearance.WeatherForecast.SubTitle" parent="TextAppearance.MaterialComponents.Subtitle1" >
        <item name="android:textColor">@color/fuscous_gray</item>
    </style>

    <style name="TextAppearance.WeatherForecast.ListItem" parent="TextAppearance.WeatherForecast.SubTitle" >
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.WeatherForecast.Button" parent="TextAppearance.MaterialComponents.Button" />

</resources>