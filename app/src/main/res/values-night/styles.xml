<resources>

    <style name="Base.Theme.WeatherForecast" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/rhino</item>
        <item name="colorOnPrimary">@color/t_white</item>
        <item name="colorPrimaryDark">@color/midnight</item>
        <item name="colorOnSurface">@color/t_white</item>
        <item name="colorAccent">@color/comet</item>
        <item name="colorSurface">@color/gray_4</item>
        <item name="colorSecondary">@color/comet</item>
        <item name="android:colorBackground">@color/rhino</item>
        <item name="oddListItemColor">@color/rhino_1</item>
        <item name="evenListItemColor">@color/pickled_bluewood</item>
        <item name="todayListItemColor">@color/rhino</item>
    </style>

    <style name="Theme.WeatherForecast" parent="Base.Theme.WeatherForecast" />

    <style name="Theme.WeatherForecast.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextAppearance.WeatherForecast.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/tutu</item>
    </style>

    <style name="TextAppearance.WeatherForecast.ToolbarTitle" parent="TextAppearance.WeatherForecast.Title">
        <item name="android:fontFamily">@font/sunny_weather</item>
        <item name="fontFamily">@font/sunny_weather</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TextAppearance.WeatherForecast.SubTitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/tutu</item>
    </style>


</resources>